<%- include("./layouts/header.ejs") %>

    <h2 class="d-flex justify-content-center">Blog Setup</h2>
    <div class="d-flex justify-content-center">
        <form action="" method="POST" enctype="multipart/form-data">
            <div class="form-group mt-3 ">
                <input type="text" name="blog_title" class="form-control " placeholder="Blog Name" required>
            </div>
            <div class="form-group mt-3 ">
                <input type="file" name="blog_image" class="form-control" required>
            </div>
            <div class="form-group mt-3 ">
                <textarea class="form-control" name="description" rows="4   " placeholder="Description"
                    required></textarea>
            </div>
            <div class="form-group mt-3 ">
                <input type="text" name="name" class="form-control" placeholder="Admin Name" required>
            </div>
            <div class="form-group mt-3 ">
                <input type="email" name="email" class="form-control" placeholder="Email" required>
            </div>
            <div class="form-group mt-3 ">
                <input type="password" name="password" class="form-control" placeholder="Password" required>
            </div>
            <div class="form-group mt-3 d-flex justify-content-center">
                <input type="submit" value="Blog Setup" class="btn btn-primary">
            </div>
        </form>
    </div>

    <% 
        if(typeof message !== 'undefined'){
            %> 
            <p style="color: red;" class="d-flex justify-content-center"><%= message %></p>
            <% 
        }
    %>

    <%- include("./layouts/footer.ejs") %>